<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.wolfcode.mapper.RegisterMapper">
    <resultMap id="registerMapper" type="cn.wolfcode.domain.Register">
        <id property="id" column="id"></id>
        <result column="phone" property="phone"></result>
        <result column="password" property="password"></result>
        <result column="salt" property="salt"></result>
        <result column="create_user" property="createUser"></result>
        <result column="create_time" property="createTime"></result>
        <result column="modify_user" property="modifyUser"></result>
        <result column="modify_time" property="modifyTime"></result>
    </resultMap>
    <select id="searchByPhone" resultMap="registerMapper">
        select * from t_user_login where phone = #{phone};
    </select>
    <insert id="register" useGeneratedKeys="true" parameterType="cn.wolfcode.domain.Register">
        insert into t_user_login(phone,password,salt,create_user,create_time,modify_user,modify_time)
        values(
                 #{phone},#{password},#{salt},#{createUser},#{createTime},#{modifyUser},#{modifyTime}
             );
    </insert>
</mapper>